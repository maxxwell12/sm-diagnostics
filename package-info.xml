<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">

	<name>SM Diagnostics</name>
	<id>jblaze:sm-diagnostics</id>
	<version>1.0</version>
	<type>modification</type>

	<!-- !! Installs !! -->
	<install for="2.0 - 2.0.99">
		<readme>README.md</readme>
		<code>hooks.php</code>
		<require-file name="source/ManageDiagnostics.php" destination="$sourcedir" />
		<require-file name="source/Subs-Diagnostics.php" destination="$sourcedir" />
		<require-file name="templates/Diagnostics.template.php" destination="$themedir" />
		<require-file name="languages/Diagnostics.english.php" destination="$languagedir" />
	</install>

	<!-- !! Uninstalls !! -->
	<uninstall for="2.0 - 2.0.99">
		<readme>README.md</readme>
		<code>hooks.php</code>
		<remove-file name="$sourcedir/ManageDiagnostics.php" />
		<remove-file name="$sourcedir/Subs-Diagnostics.php" />
		<remove-file name="$themedir/Diagnostics.template.php" />
		<remove-file name="$languagedir/Diagnostics.english.php" />
	</uninstall>

</package-info>
